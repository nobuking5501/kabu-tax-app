# メール送信設定
# none: PDFダウンロードのみ（デフォルト）
# resend: Resendでメール送信
MAIL_PROVIDER=none

# Resend設定（MAIL_PROVIDER=resendの場合に必要）
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL="榧野国際税務会計事務所 <noreply@yourdomain.com>"

# 開発環境での認証バイパス（開発中のみtrueに設定）
DEV_BYPASS_AUTH=true

# 管理者メールアドレス（将来の管理ダッシュボード用、カンマ区切り）
ADMIN_EMAILS=admin@example.com

# Google スプレッドシート テンプレート設定
NEXT_PUBLIC_TEMPLATE_SPREADSHEET_ID=<<<YOUR_SPREADSHEET_ID>>>
NEXT_PUBLIC_MAIN_SHEET_GID=<<<MAIN_GID>>>
NEXT_PUBLIC_MAIN_FUNCTION_RANGE=<<<A1_RANGE_FOR_MAIN>>>

# サブシート設定（任意）
NEXT_PUBLIC_SUB_SHEET_GID=<<<SUB_GID_OR_EMPTY>>>
NEXT_PUBLIC_SUB_FUNCTION_RANGE=<<<A1_RANGE_FOR_SUB_OR_EMPTY>>>

# Firebase Admin SDK設定（サーバーサイド用）
# Firebaseコンソール > プロジェクト設定 > サービスアカウント からダウンロードしたJSONファイルから取得
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com

# Firebase Client SDK設定（クライアントサイド用）
# Firebaseコンソール > プロジェクト設定 > 全般 > マイアプリ から取得
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Stripe設定（決済機能）
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_PRICE_ID=price_your_price_id_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
APP_URL=http://localhost:3000
