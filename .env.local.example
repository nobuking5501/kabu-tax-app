# メール送信モード（"true"でメール送信、未設定またはfalseでPDFダウンロード）
SEND_MAIL=false

# Resend設定（SEND_MAIL=trueの場合に必要）
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM=noreply@yourdomain.com

# 開発環境での認証バイパス（開発中のみtrueに設定）
DEV_BYPASS_AUTH=true

# 管理者メールアドレス（将来の管理ダッシュボード用、カンマ区切り）
ADMIN_EMAILS=admin@example.com

# Google スプレッドシート テンプレート設定
NEXT_PUBLIC_TEMPLATE_SPREADSHEET_ID=<<<YOUR_SPREADSHEET_ID>>>
NEXT_PUBLIC_MAIN_SHEET_GID=<<<MAIN_GID>>>
NEXT_PUBLIC_MAIN_FUNCTION_RANGE=<<<A1_RANGE_FOR_MAIN>>>

# サブシート設定（任意）
NEXT_PUBLIC_SUB_SHEET_GID=<<<SUB_GID_OR_EMPTY>>>
NEXT_PUBLIC_SUB_FUNCTION_RANGE=<<<A1_RANGE_FOR_SUB_OR_EMPTY>>>

# Vercel Postgres データベース接続
# Vercelダッシュボードの Storage > Postgres から取得してください
POSTGRES_URL=postgres://default:xxxxx@xxxxx-pooler.us-east-1.postgres.vercel-storage.com:5432/verceldb
POSTGRES_PRISMA_URL=postgres://default:xxxxx@xxxxx-pooler.us-east-1.postgres.vercel-storage.com:5432/verceldb?pgbouncer=true&connect_timeout=15
POSTGRES_URL_NON_POOLING=postgres://default:xxxxx@xxxxx.us-east-1.postgres.vercel-storage.com:5432/verceldb
POSTGRES_USER=default
POSTGRES_HOST=xxxxx-pooler.us-east-1.postgres.vercel-storage.com
POSTGRES_PASSWORD=xxxxx
POSTGRES_DATABASE=verceldb
