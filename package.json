{
  "name": "kabu-tax-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npx turbo run dev",
    "build": "npx turbo run build",
    "test": "npx turbo run test",
    "lint": "npx turbo run lint",
    "dev:customer": "npm run dev --workspace=apps/customer",
    "dev:admin": "npm run dev --workspace=apps/admin"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^2.0.19",
    "turbo": "^2.3.3"
  },
  "dependencies": {
    "@types/nodemailer": "^7.0.2",
    "nodemailer": "^7.0.9"
  }
}
